{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

<div id="banner-{{ section.id }}" class="banner">
  {%- if section.settings.image != blank -%}
    <div id="banner-box" class="banner-box">
      {% capture style %}
        object-position: {{ section.settings.focal }}% center;
      {% endcapture %}
      {% comment %}
      {% render 'image-responsive', image: section.settings.image, style: style class:'banner-box-image' %}
      {% endcomment %}
      <img src="{{ section.settings.image | image_url }}" class="banner-box-image" style="{{style}}"/>
      <div id="banner-box-logo" class="banner-box-logo">
        <img class="banner-box-logo-image" src="{{ 'rubato-outline.svg' | asset_url }}" width="100" height="100" loading="eager"/>
      </div>
    </div>
  {%- endif -%}
</div>

{% javascript %}

  // Start outline logo on top, hide on scroll
  function initHomePage(){
    return
    var menu = document.getElementById('menu')
    var bannerLogo = document.getElementById('banner-box-logo')
    
    if(window.scrollY === 0)
      menu.style.display = 'none'
    else
      bannerLogo.style.display = 'none'
    
    document.addEventListener('scroll', function(e){
      menu.style.display = 'flex'
      bannerLogo.classList.add('fadeout')
    })
  }

  document.addEventListener("DOMContentLoaded", initHomePage);
  document.addEventListener("shopify:section:load", initHomePage);
  
{% endjavascript %}

{% schema %}
{
  "name": "Splash",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "focal",
      "label": "Focal point (mobile)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 50
    }
  ]
}
{% endschema %}
