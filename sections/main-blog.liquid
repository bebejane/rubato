{{ 'section-blog.css' | asset_url | stylesheet_tag }}
{% render 'log', object:blog.articles_count %}
<div class="blog">
  <h1 class="blog-header">{{blog.title}}</h1>
  <div class="blog-posts">
    {% for article in blog.articles %}
      <div class="blog-post-item">
        <div class="blog-post-wrap">
          <a href="{{article.url}}">
            {% render 'image-responsive', image:article.image, class:'blog-post-image' %}
          </a>
          <h2 class="blog-post-title">{{article.title}}</h2>
          <p class="blog-post-content">
            {{article.content | strip_html | truncatewords: 50}}
          </p>
          
        </div>
        <a href="{{article.url}}" class="blog-post-read-more">
          Read more
        </a>
      </div>

    {% endfor %}
  </div>
</div>