{{ 'section-blog.css' | asset_url | stylesheet_tag }}

<div class="blog">
  <h1 class="blog-header">{{blog.title}}</h1>
  <div class="blog-posts">
    <div class="blog-post">
      <div class="blog-post-header">
        <h2 class="blog-post-title">{{blog.articles[0].title}}</h2>
        <p class="blog-post-meta">{{blog.articles[0].published_at | date: "%B %d, %Y"}}</p>
      </div>
      <div class="blog-post-body">
        {{blog.articles[0].body}}
      </div>
    </div>  
  </div>
</div>