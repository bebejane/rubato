{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{% comment %}
<link rel="stylesheet" href="{{ 'component-newsletter.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}</noscript>
{% endcomment %}

<footer class="footer">
  <section class="footer-about">
    <span class="footer-header">
      {{ section.settings.headline | newline_to_br }}
    </span>
    <img 
      src="{{ 'rubato-outline.svg' | asset_url }}" 
      class="footer-logo" 
      loading="eager"
      width="100%" 
      height="100%"
    >
    <span class="footer-text">
      {{ section.settings.description }}
    </span>
  </section>
  <div class="footer-line"></div>
  <section class="footer-newsletter">
    <div class="footer-newsletter-signup">{{ section.settings.signup }}</div>
    <form class="footer-newsletter-form">
      <div class="footer-newsletter-email">
        <span>E-mail:</span>
        <input type="text" name="email" id="email">
      </div>
    </form>
    <button class="footer-newsletter-button">{{ section.settings.signup-button }}</button>
  </section>
  
  <section class="footer-links">
    <ul>
      {%- for link in section.settings.menu.links -%}  
        <li>
          <a href="{{ link.url }}" {% if link.current %} aria-current="page" class="nav-selected"{% endif %}>
            {{ link.title | escape }}
          </a>
        </li>
      {%- endfor -%}
    </ul>
  </section>
  <section class="footer-copyright">
    {{ section.settings.copyright }}
  </section>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "headline",
      "label": "Headline"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "signup",
      "label": "Newsletter"
    },
    {
      "type": "text",
      "id": "signup-button",
      "label": "Button"
    },
    {
      "type": "text",
      "id": "copyright",
      "label": "Copyright"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ]
}
{% endschema %}
