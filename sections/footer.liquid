{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{% comment %}
<link rel="stylesheet" href="{{ 'component-newsletter.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}</noscript>
{% endcomment %}

<footer class="footer">
  <section class="footer-about">
    <h2 class="footer-header">
      {{ section.settings.headline | newline_to_br }}
    </h2>
    <div class="footer-logo-wrap">
      <img 
        src="{{ 'rubato-outline.svg' | asset_url }}" 
        class="footer-logo" 
        loading="eager"
        width="100%" 
        height="100%"
      >
    </div>
    <div class="footer-text-wrap">
      <span class="footer-text">
        {{ section.settings.description }}
      </span>
    </div>
  </section>
  <div class="footer-line"></div>
  <section class="footer-newsletter">
    <h2 class="footer-newsletter-signup">{{ section.settings.signup }}</h2>

    {% form 'customer' %}
      <div class="footer-newsletter-email-wrap">
        <div class="footer-newsletter-email">
          <label for="email">E-mail:</label>
          <input type="email" name="contact[email]" />
          <div class="footer-newsletter-circle"></div>
        </div>
      </div>
    {% endform %}
    <div class="footer-newsletter-button-wrap">
      <button id="contact_form_submit" type="submit" class="footer-newsletter-button">{{ section.settings.signup-button }}</button>
    </div>
  </section>
  
  <section class="footer-links">
    <ul>
      {%- for link in section.settings.menu.links -%}  
        <li>
          <a href="{{ link.url }}" {% if link.current %} aria-current="page" class="nav-selected"{% endif %}>
            <h2>{{ link.title | escape }}</h2>
          </a>
        </li>
      {%- endfor -%}
    </ul>
  </section>
  <section class="footer-copyright">
    <h2>{{ section.settings.copyright }}</h2>
  </section>
</footer>


{% javascript %}

  function initFooter(){
    var contactForm = document.getElementById('contact_form')
    var contactFormSubmit = document.getElementById('contact_form_submit')
    
    contactFormSubmit.addEventListener('click', function(e){
      contactForm.submit()
    })
  }

  document.addEventListener("DOMContentLoaded", initFooter);
  document.addEventListener("shopify:section:load", initFooter);

{% endjavascript %}

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "headline",
      "label": "Headline"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "signup",
      "label": "Newsletter"
    },
    {
      "type": "text",
      "id": "signup-button",
      "label": "Button"
    },
    {
      "type": "text",
      "id": "copyright",
      "label": "Copyright"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ]
}
{% endschema %}
