{% comment %}theme-check-disable TemplateLength{% endcomment %}
{{ 'section-main-product.css' | asset_url | stylesheet_tag }}



{% assign html = product.description %}
{% assign arr = html | split: '<tbody data-mce-fragment="1">' %}
{% assign sizes = arr[1] | split: '</tbody>' %}
{% assign arr2 = arr[0] | split: '<table' %}
{% assign description = arr2[0] %}

{% render 'log', object:description %}
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{% render 'log', object:product %}

<section class="product">
  <div class="product-wrap">
    <div class="product-details">
      <div class="product-attributes">
        <div class="product-attributes-header">
          {{ product.title }}
        </div>
        <div class="product-attributes-row">
          <div class="product-attributes-key">key</div>
          <div class="product-attributes-value">val</div>
        </div>
        <div class="product-attributes-row">
          <div class="product-attributes-key">key</div>
          <div class="product-attributes-value">val</div>
        </div>
        <div class="product-attributes-row">
          <div class="product-attributes-key">key</div>
          <div class="product-attributes-value">val</div>
        </div>
      </div>
      <div class="product-description">
        {{ description }}
      </div>
      <ul class="product-variants">
        <li>S</li>
        <li>M</li>
        <li>XL</li>
      </ul>
    </div>
    <div class="product-gallery"></div>
  </div>
  <div class="product-sizes">
    <div>Size Chart</div>
    <table>
      {{ sizes }}
    </table>
  </div>
</section>


